{% extends '../../layout/default.twig' %}

{% block title %}
rechercher un livre par catégorie
{% endblock %}


{% block content %}
<h1>rechercher un livre par catégorie</h1>
<form action="" method="get" class="grid has-gutter">
    <div class="input select col-10">
        <select name="">
            <option value="">choisir une catégorie</option>
            {% for categorie in categories %}
            <option value="{{ categorie.id }}">{{ categorie.name }}</option>
            {% endfor %}
        </select>
    </div>
    <div class="input submit col-2">
        <button type="submit" class="primary">rechercher</button>
    </div>
</form>
{% endblock %}
