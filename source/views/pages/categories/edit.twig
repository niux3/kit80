{% extends '../../layout/default.twig' %}

{% block title %}
{% if data.categories_id %}
éditer
{% else %}
ajouter
{% endif %}
une catégorie
{% endblock %}


{% block content %}
<h1>
    {% if data.categories_id %}
    éditer
    {% else %}
    ajouter
    {% endif %}
    une catégorie
</h1>
{% if data.categories_id %}
<form action="{{ url('categorie_update', {id:data.categories_id}) }}" method="post">
    <input type="hidden" name="categories_id" value="{{ data.categories_id }}">
{% else %}
<form action="{{ url('categorie_create') }}" method="post">
{% endif %}
    {% if data.categories_id %}
    {% endif %}
    <div class="input text">
        <label for="name">nom de la catégorie</label>
        <input type="text" name="name" id="name"{% if data.name %} value="{{ data.name }}"{% endif %}{% if error.name %} class="error"{% endif %}>
        {% if error.name %}
        <span class="error">{{ error.name }}</span>
        {% endif %}
    </div>
    <div class="input submit">
        <button class="primary" type="submit">
            {% if data.categories_id %}
            éditer
            {% else %}
            ajouter
            {% endif %}
        </button>
    </div>
</form>
{% endblock %}
